grammar arith;

Integer : [1-9][0-9]*	;

start 
	: addi=$1 '\n'
	{
		$$ = $1
	}
	;

addi
	: addi=$1 '+' multi=$2
	{
		$R = $1 + $2
	}
	| addi '-' multi
	{
		$R = $1 - $2
	}
	;

multi
	: multi=$1 '*' expon=$2
	{
		$R = $1 * $2
	}

	| multi=$1 '/' expon=$2
	{
		$R = $1 / $2
	}
	;

expon
	: number=$1
	{
		$R = $1
	}
	;

number
	: '(' addi=$1 ')'
	{
		$R = $1
	}
	| Integer=$1
	{
		$R = toInt($1)
	}
	;
